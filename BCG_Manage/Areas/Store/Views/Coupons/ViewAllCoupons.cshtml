@model PagedList.IPagedList<BCG_DB.Entity.Store.tblDiscount>
@using PagedList.Mvc;
@{
    ViewBag.Title = "View All Coupons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        View All Coupons.
        <small>Store</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Admin"><i class="fa  fa-home"></i> Home</a></li>
        <li>Store</li>
        <li class="active">View All Coupons</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Helper for info boxes after manipulating data -->
    @ResultHelper.ResultFromTempData(TempData)


    <!-- Default box -->
    <div class="row">


        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Coupons: </h3>
            
                </div><!-- /.box-header -->

                <div class="box-body table-responsive no-padding">


                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <a href="@Url.Action("ViewAllCoupons", new { sortOrder = ViewBag.IdCouponSortParm, currentFilter = ViewBag.CurrentFilter })">
                                        <i class="fa fa-sort-amount-desc"></i>
                                        ID Coupon:
                                    </a>
                                </th>
                                <th>
                                    <a href="@Url.Action("ViewAllCoupons", new { sortOrder = ViewBag.AmountSortParm, currentFilter = ViewBag.CurrentFilter })">
                                        <i class="fa fa-sort-amount-desc"></i>
                                       Discount Amount:
                                    </a>
                                </th>
                                <th>
                                    <a href="@Url.Action("ViewAllCoupons", new { sortOrder = ViewBag.KeyNameSortParm, currentFilter = ViewBag.CurrentFilter })">
                                        <i class="fa fa-sort-amount-desc"></i>
                                        Coupon Key:
                                    </a>

                                </th>
                                <th>
                                    <a href="@Url.Action("ViewAllCoupons", new { sortOrder = ViewBag.StartDateSortParm, currentFilter = ViewBag.CurrentFilter })">
                                        <i class="fa fa-sort-amount-desc"></i>
                                       Start Date:
                                    </a>

                                </th>
                                <th>
                                    <a href="@Url.Action("ViewAllCoupons", new { sortOrder = ViewBag.EndDateSortParm, currentFilter = ViewBag.CurrentFilter })">
                                        <i class="fa fa-sort-amount-desc"></i>
                                        End Date:
                                    </a>

                                </th>
                            
                                <th>
                                    Functions
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdDiscount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiscountAmount) %
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiscountKey)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartDateOfDiscount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndDateOfDiscount)
                                    </td>
                               
                                    <td>
                                        <span onclick="return confirm('Are you sure you want to delete resource: '+ '@item.IdDiscount'+'?')">
                                            @Html.ActionLink("Delete", "DeleteDiscount", new { id = item.IdDiscount }, new { @class = "btn btn-danger" })
                                        </span>

                                    </td>

                                </tr>
                            }
                        </tbody>

                    </table>
                </div><!-- /.box-body -->
                <div class="box-footer clearfix">
                    <span class="pagination pagination-sm no-margin pull-right">
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                        @Html.PagedListPager(Model, page => Url.Action("ViewAllCoupons", new { page }))
                    </span>
                </div>

            </div><!-- /.box -->
        </div>
    </div>



</section><!-- /.content -->
