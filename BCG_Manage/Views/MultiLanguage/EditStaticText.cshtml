@model BCG_Manage.Models.StaticResources

@using BCG_Manage.Controllers;
@{
    ViewBag.Title = "Edit static text";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Edit static resource.
        <small>Multilanguage</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Admin"><i class="fa fa-dashboard"></i> Home</a></li>
        <li>MultiLanguage</li>
        <li class="active">Edit static text</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- Helper for info boxes after manipulating data -->
    @ResultHelper.ResultFromTempData(TempData)


    <!-- Default box -->
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Edit  </h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("EditStaticText", "MultiLanguage", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="box-body">
                        <div class="form-group">
                            <label> Language: </label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class=" fa fa-long-arrow-down"></i>
                                </div>
                            @*    @Html.DropDownListFor(model => model.IdLanguage, Model.IdLanguages, htmlAttributes: new { @class = "form-control" })*@

                                @Html.HiddenFor(model => model.IdStaticResource)
                                @Html.HiddenFor(model => model.IdLanguage)
                                @Html.HiddenFor(model => model.idStaticText)

                                <input type="text" class="form-control" placeholder="@Model.Language" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label> Description: </label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class=" fa  fa-header"></i>
                                </div>
                                @Html.EditorFor(model => model.Description, Model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter..." } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <label> Text: </label>
                            <div class="input-group col-lg-12">

                                @Html.EditorFor(model => model.Text, Model.Text, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter...", id = "editor" } })
                                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                }
            </div><!-- /.box -->
        </div>

    </div>


</section><!-- /.content -->
@section Scripts {
    <script src="https://cdn.ckeditor.com/4.4.3/full/ckeditor.js"></script>
    <script>
    $(function () {
        // Replace the <textarea id="editor1"> with a CKEditor
        // instance, using default configuration.
        CKEDITOR.replace('editor');

    });
    </script>

}
