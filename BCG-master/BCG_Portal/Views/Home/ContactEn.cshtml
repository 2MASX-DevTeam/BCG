
@using System.Configuration
@using System.Web.UI.WebControls
@model BCG_Portal.Models.ExternalModels.ContactModel
@{
    ViewBag.Title = "Контакти";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--==============================content================================-->
<section id="content">
    <div class="zerogrid top AvdirR">
        <div class="row">
            <div class="col-md-8">
                <div class="wrap-col">
                    <h2>How to contact us</h2>
                    <div class="">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d23667.076222646938!2d24.728607281192076!3d42.14205759022273!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14acd1b737c83041%3A0x4b859e8be8490ec7!2z0J_Qu9C-0LLQtNC40LIg0KbQtdC90YLRitGALCDQn9C70L7QstC00LjQsg!5e0!3m2!1sbg!2sbg!4v1453645388002"
                                width="450" height="250" frameborder="0" style="border: 0" allowfullscreen></iframe>
                        <span>
                            Plovdiv is the second largest city in Bulgaria with a population of 341,625 people (as of 31.12.2015).
                            Located in the western part of the Upper Thracian Plain on the two banks of the Maritsa River.
                            Situated 15 km north of the Rhodopes, 50 km south of Stara Planina.
                        </span>
                    </div>
                    <div class="">

                        <p>
                            The town is built in the foothills of the seven syenite hills, so often called "the city under the hills."
                            Plovdiv is the administrative center of Plovdiv, Plovdiv municipality of Maritsa Municipality Rodopi
                            It is the largest economic core of the South Central Region.
                        </p>
                        Plovdiv International Fair is held, the international theater festival "Scene at a Crossroads"
                        TV Festival "Golden Chest" and are preserved ancient theater, the Roman Odeon, the Agora (the Roman Forum)
                        Roman stadium, Late Antique building "Eirene" small basilica and others.
                        <p>
                            Plovdiv city of Bulgaria, elected European Capital of Culture for 2019.
                            This year's status is shared with another European city - Matera in Italy.
                        </p>
                        <br/>

                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="wrap-col">
                    <!--==============================Contact Form Start================================-->
                    <h2>Contact form</h2>
                    @using (Html.BeginForm(new
                    {
                        @class = "contacts-form"
                    }))
                    {
                        @Html.LabelFor(model => model.Name, "Name:")<br/>
                        @Html.TextBoxFor(model => model.Name, new
                        {
                            @class = "inputbg"
                        })<br/>
                        @Html.ValidationMessageFor(model => model.Name)<br/>

                        @Html.LabelFor(model => model.Email, "E-mail:")<br/>
                        @Html.TextBoxFor(model => model.Email, new
                        {
                            @class = "inputbg"
                        })<br/>
                        @Html.ValidationMessageFor(model => model.Email)<br/>

                        @Html.LabelFor(model => model.Mobile, "Phone:")<br/>
                        @Html.TextBoxFor(model => model.Mobile, new
                        {
                            @class = "inputbg"
                        })<br/>
                        @Html.ValidationMessageFor(model => model.Mobile)<br/>

                        @Html.LabelFor(model => model.Message, "Your message:")
                        <br/>
                        @Html.TextAreaFor(model => model.Message, new
                        {
                            @class = "textareabg"
                        })<br/>
                        @Html.ValidationMessageFor(model => model.Message)<br/>

                        <div class="g-recaptcha" data-sitekey=@ConfigurationManager.AppSettings["ReCaptchaPublicKey"]></div>
                        @*<a href="#" class="button" onclick="document.getElementById('form').submit()">Изпрати</a>*@

                        @*<input type="submit" class="button-bg" value="Send" />*@
                        <button style="color: blue">Send!</button>

                    }
                    <br/>
                    <h2>@TempData["message"]</h2>
                    <!--==============================Contact Form End================================-->
                </div>
            </div>

            <div class="clear"></div>
        </div>
    </div>
</section>
<!--============================== end content================================--> 