    </div>
</div>
<!--============================== End Navigation Bar Fixed 2 Top =================================-->
<!--============================== Shared Body Content =================================-->

    <div class="container body-content">
        <!--==============================individual view content=================================-->
        @RenderBody()
        <!--==============================end individual view content=================================-->
