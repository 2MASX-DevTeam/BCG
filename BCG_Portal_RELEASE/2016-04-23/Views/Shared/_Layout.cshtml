        </div>*@


    <div style="height: 50px;"></div>


    <div class="container body-content">

        @RenderBody()
        <hr />

        <div class="clearfix"></div>
        <!--==============================footer=================================-->
        <footer class="text-center" style="vertical-align:middle;">
            <div>
                <h3 class="">
                    <span>Copyright &copy; @DateTime.Now.Year </span>
                    @*<a href="https://www.bc-vit.bg" style="text-decoration:none !important;">www.bc-vit.bg</a>*@
                    @Html.ActionLink("www.bc-vit.bg", "Index", "Home")
                </h3>
            </div>
            <div class="soc-icons">
                <div>
                    <a href="#"><img src="/images/twitter.jpg" alt="Twitter" title=" Twitter"></a>
                    <a href="#"><img src="/images/facebook.jpg" alt="Facebook" title="Facebook"></a>
                    <a href="#"><img src="/images/google.jpg" alt="Google" title="Google"></a>
                </div>
            </div>
        </footer>
        <!--==============================end footer=================================-->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js"></script>
    @RenderSection("scripts", required: false)
